<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupActivity">

    <android.support.constraint.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="txt1,txt2,txt3" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Group Example"
        />

    <TextView
        android:id="@+id/txt2"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="hello Example"
        />

    <TextView
        android:id="@+id/txt3"
        app:layout_constraintTop_toBottomOf="@id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="result"
        />

    <Button
        android:id="@+id/btninvisible"
        android:text="invisible gone"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_editor_absoluteX="280dp"
        app:layout_editor_absoluteY="350dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>