<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    >
    
    <Button
        android:id="@+id/btn1"

        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@android:color/holo_green_light"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toLeftOf="@+id/btn2"


        android:text="button1"/>

    <Button
        android:id="@+id/btn2"
        android:padding="10dp"
        android:background="@android:color/holo_orange_light"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/btn1"
        app:layout_constraintLeft_toLeftOf="@id/btn1"
        app:layout_constraintRight_toRightOf="@id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="button2"/>

    <Button
        android:id="@+id/btn3"
        android:padding="10dp"
        android:background="@android:color/holo_red_dark"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/btn2"
        android:layout_width="wrap_content"

        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        android:text="Guidlines"/>




    <Button
        android:id="@+id/btn4"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"

        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@android:color/holo_green_light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="button4"/>

    <Button
        android:id="@+id/btn5"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintCircle="@id/btn4"
        app:layout_constraintCircleAngle="60"
        app:layout_constraintCircleRadius="100dp"



        android:background="@android:color/holo_orange_light"

        android:text="button5"/>


    <Button
        android:id="@+id/btn6"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"
        app:layout_constraintCircle="@id/btn5"
        app:layout_constraintCircleAngle="60"
        app:layout_constraintCircleRadius="100dp"


        android:text="button6"/>

    <Button
        android:id="@+id/btn7"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@android:color/holo_orange_light"
        app:layout_constraintCircle="@id/btn4"
        app:layout_constraintCircleRadius="100dp"

        android:text="button7"/>

    <Button
        android:id="@+id/btn8"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintCircle="@id/btn5"
        app:layout_constraintCircleAngle="120"
        app:layout_constraintCircleRadius="100dp"
        android:background="@android:color/holo_orange_light"

        android:text="button8"/>

   <!-- <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="195dp"
        tools:layout_editor_absoluteY="232dp" />-->

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"

        android:text="barrier"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintHorizontal_bias="0.5"
         />


    <Button
        android:id="@+id/bgtnnextactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:text="Next activity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btncontarintchain"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btncontarintchain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/bgtnnextactivity"
        android:text="Chain Constraint"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>